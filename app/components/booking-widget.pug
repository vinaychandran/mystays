include ../components/modal-popup.pug
section.booking
  .container
    .section-title
      h2
    ul#tabs.tabs
      li
        a(href='', data-href='#booking-tab1') お部屋
      li
        a(href='', data-href='#booking-tab2') レストラン
      li
        a(href='', data-href='#booking-tab3') お部屋+航空券
    #booking-tab1.tabContent
      label room
    #booking-tab2.tabContent
      h3 &#x30EC;&#x30B9;&#x30C8;&#x30E9;&#x30F3;
    #booking-tab3.tabContent
      #room-locations
        section
          .form-group
            label.form-label(for='') 出発空港
            .input-showtext
              input.form-control(type='text', placeholder='大阪(伊丹・関西・神戸)')
              .popup-menu
                .popup-content-input
                  ul.cities
                    li
                      span(target='Hokkaido', names='Hokkaido') Hokkaido
                    li
                      span(target='Okinawa', names='Okinawa') Okinawa
                    li
                      span(target='Tochigi', names='Tochigi') Tochigi
                    li
                      span(target='Tokyo', names='Tokyo') Tokyo
      #date_range_picker.date_range_picker
        .values
          .startDateContainer
            label 2018年00月00日 金曜日
            .dateStart
              .value.date_at
                span.date_at
                input#date_at.date_at(type='hidden')
          .to ~
          .endDateContainer
            label 2018年00月00日 金曜日
            .dateEnd
              .value.date_to
                span.date_to
                input#date_to.date_to(type='hidden')
        .calendar
          .button.button-prev
          .button.button-next
          .calendarContainer
          .bottomLayer
            .days 2018年00月00日 金曜日 to 2018年00月00日 金曜日
            .nights 10 金曜日
            .button.closePopup &#x5B8C;&#x4E86;
      #people
        .homepage-form.choose-rooms-search
          .search-form.datetime-picker
            .row
              .col.guests
                .row.clearfix.form-group
                  label.form-label(for='') 大人2名, 子供1名
                  .form-select(data-toggle='modal', data-target='modal1', onclick='FE.global.bookingModal()')
                    .selected-data 1 room 2 Adults 2 child
      #find-button
        label 最低価格保証
        button(name='submit', type='submit', value='空室を検索') 空室を検索
